{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
            "custom": false,
            "customDuotone": false, 
			"defaultDuotone": false,
            "defaultPalette": false,
			"customGradient": false,
			"defaultGradients": false,
			"gradients": [
				{
                    "slug": "black-transparent",
                    "gradient": "linear-gradient(101deg, rgba(0, 0, 0, 0.70) 5.32%, rgba(121, 171, 37, 0.00) 74.78%)",
                    "name": "Black to transparent"
                }
			],
            "palette": [ 
				{
                    "slug": "white",
                    "color": "#fff",
                    "name": "White"
                },
                {
                    "slug": "green",
                    "color": "#79AB25",
                    "name": "Green"
                },
                {
                    "slug": "clear-green",
                    "color": "#C6D400",
                    "name": "Clear green"
                },
                {
                    "slug": "blue",
                    "color": "#007CB7",
                    "name": "Blue"
                },
                {
                    "slug": "clear-blue",
                    "color": "#CCE5F1",
                    "name": "Clear blue"
                },
                {
                    "slug": "blue-bg",
                    "color": "rgba(0, 124, 183, 0.10)",
                    "name": "Blue background"
                },
                {
                    "slug": "green-bg",
                    "color": "#F2F7E9",
                    "name": "Green background"
                }
            ]
		},
		"layout": {
			"contentSize": "1080px", 
			"wideSize": "1280px"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"customFontSize": false,
			"fontFamilies": [
				{
					"fontFamily": "\"Karla\", sans-serif",
					"name": "Karla",
					"slug": "karla"
				},
				{
					"fontFamily": "\"Lato\", sans-serif",
					"name": "Lato",
					"slug": "lato"
				}
			],
			"fontSizes": [
				{
					"size": "16px",
					"slug": "normal"
				},
				{
					"size": "22px",
					"slug": "medium"
				},
				{
					"size": "28px",
					"slug": "large"
				},
				{
					"size": "32px",
					"slug": "x-large"
				},
				{
					"size": "42px",
					"slug": "xx-large"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"spacing": {
			"blockGap": "0px"
		},
		"blocks": {
			"core/paragraph": {
				"spacing": {
					"margin": {
						"top": "0px",
						"bottom": "24px"
					}
				}
			},
			"core/columns": {
				"spacing": {
					"blockGap": "80px"
				}
			}		
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"link": {
				"typography": {
					"textDecoration": "none"
				}
			},
			"button": {
				"color": {
                    "background": "transparent",
                    "text": "var(--wp--preset--color--green)"
                },
				"border": {
					"radius": "5px",
                    "style": "solid",
					"width": "2px",
					"color": "var(--wp--preset--color--green)"
				},
				"typography": {
                    "fontFamily":"var(--wp--preset--font-family--karla)",
                    "fontSize": "var(--wp--preset--font-size--normal)",
                    "fontWeight": "700"
                },
				"spacing": {
                    "blockGap": "30px",
					"margin": {
						"top": "30px"
					},
                    "padding": {
                        "top": "10px",
                        "bottom": "10px",
                        "left": "14px",
                        "right": "14px"
                    }
                }
			},
			"h1": {
				"spacing": {
					"margin": {
						"bottom": "30px"
					}
				}, 
				"color": {
					"text": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "800"
				}
			},
			"h2": {
				"spacing": {
					"margin": {
						"bottom": "30px"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "800"
				}
			},
			"h3": {
				"spacing": {
					"blockGap": "40px",
					"margin": {
						"bottom": "10px"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "700"
				}
			},
			"h4": {
				"spacing": {
					"margin": {
						"bottom": "10px"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"fontWeight": "700"
				}
			},
			"heading": {
				"spacing": {
					"margin": {
						"top": "0px"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--karla)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--lato)",
			"fontSize": "var(--wp--preset--font-size--normal)"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}
